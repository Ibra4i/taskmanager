        display: flex;
        flex-wrap: wrap; /* Allows wrapping on smaller screens */
        gap: 10px;
        justify-content: center;
        align-items: stretch;
        overflow-x: auto; /* Enables horizontal scrolling if needed */
        padding: 10px;
    }

    .calendar-day {
        flex: 1; /* Makes all days evenly distribute */
        min-width: 150px; /* Prevents items from becoming too small */
        max-width: 180px; /* Prevents items from stretching too much */
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 15px;
        transition: transform 0.2s ease-in-out;
        text-align: center;
    }

