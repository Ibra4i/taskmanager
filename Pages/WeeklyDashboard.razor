            transform: scale(1.05); /* Slight scaling */
            box-shadow: 4px 4px 12px rgba(0, 0, 0, 0.2); /* Deeper shadow */
        }

        .task-item .daily {
            color: #007bff; /* Blue */
            font-weight: bold;
        }

        .task-item .weekly {
            color: #28a745; /* Green */
            font-weight: bold;
        }

        .task-item .monthly {
            color: #fd7e14; /* Orange */
            font-weight: bold;
        }


        .task-item.completed {
            background: #d4edda;
            text-decoration: line-through;
        }

    .task-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .task-item.expanded {
        background-color: #f8f9fa;
        padding: 12px;
        border: 1px solid #ced4da;
    }

    .task-header button {
        transition: transform 0.2s ease-in-out;
    }

        .task-header button:hover {
            transform: scale(1.2);
        }

    .btn-primary {
        background: linear-gradient(45deg, #007bff, #0056b3);
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(45deg, #0056b3, #003f7f);
            transform: scale(1.05);
        }

    .modern-circle-button {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        background: #28a745;
        color: white;
        font-size: 22px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.15);
        transition: all 0.3s ease;
    }

        .modern-circle-button:hover {
            background: #218838;
            transform: rotate(90deg) scale(1.1);
        }
    media (max-width: 768px) {
        .calendar

    {
        flex-wrap: nowrap; /* Prevent wrapping, allow scrolling */
        overflow-x: auto; /* Scrollable row on mobile */
    }

    .calendar-day {
        min-width: 120px; /* Adjust size for mobile */
        max-width: 140px;
        font-size: 0.9rem;
        padding: 10px;
    }

    .modern-circle-button {
        width: 30px;
        height: 30px;
        font-size: 18px;
    }

    }

    .calendar::-webkit-scrollbar {
        height: 6px;
    }

    .calendar::-webkit-scrollbar-thumb {
        background: #007bff;
        border-radius: 3px;
    }
    .calendar-navigation button {
    background-color: #007bff; /* Primary Blue */
    color: white;
    border: none;
    padding: 8px 16px;
    border-radius: 5px;
    font-weight: bold;
    transition: all 0.3s ease-in-out;
    box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.1);
}

.calendar-navigation button:hover {
    background-color: #0056b3; /* Darker Blue on Hover */
    transform: scale(1.05);
    box-shadow: 4px 4px 12px rgba(0, 0, 0, 0.2);
}

.calendar-navigation button:active {
    transform: scale(0.98);
}

    h1 {
        font-size: 2rem;
        font-weight: 700;
    }

</style>

@code {
    private List<TaskItem> weeklyTasks;
    private DateTime startDate;
    private DateTime endDate;

    protected override async Task OnInitializedAsync()
    {
        startDate = DateTime.Today;
        endDate = startDate.AddDays(6);
        await LoadTasks();
    }

    private async Task LoadTasks()
    {
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user.Identity.IsAuthenticated)
            {
                var userName = user.Identity.Name;

                using (var context = ContextFactory.CreateDbContext())
                {
                    weeklyTasks = await context.Tasks
                        .Where(task => task.DueDate >= startDate && task.DueDate <= endDate && task.UserId == userName)
                        .ToListAsync();

                    // Set IsExpanded to false for each task
                    // foreach (var task in weeklyTasks)
                    // {
                    //     task.IsExpanded = false;
                    // }
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading tasks for the week.");
        }
    }

    private async Task ShowPreviousWeek()
    {
        try
        {
            startDate = startDate.AddDays(-7);
            endDate = startDate.AddDays(6);
            await LoadTasks();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error showing previous week.");
        }
    }

    private async Task ShowNextWeek()
    {
        try
        {
            startDate = startDate.AddDays(7);
            endDate = startDate.AddDays(6);
            await LoadTasks();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error showing next week.");
        }
    }

    private void NavigateToAddTask(DateTime date)
    {
        int daysDifference = DaysDifference(date);
        string s = daysDifference.ToString();
        Navigation.NavigateTo($"/addtask/{daysDifference}");
    }

    private int DaysDifference(DateTime date)
    {
        return (date - DateTime.Today).Days;
    }

    private void NavigateBack()
    {
        Navigation.NavigateTo("/");
    }

    private void NavigateToTaskManager()
    {
        Navigation.NavigateTo("/counter");
    }

    private void ToggleTaskExpansion(TaskItem task)
    {
        task.IsExpanded = !task.IsExpanded;
    }

    private void ToggleTaskEditing(TaskItem task)
    {
        task.IsEditing = !task.IsEditing;
        task.IsExpanded = !task.IsExpanded;
    }

    private void SaveTask(TaskItem task)
    {
        using (var context = ContextFactory.CreateDbContext())
        {
            context.Tasks.Update(task);
            task.IsEditing = false;
            context.SaveChanges();
        }
    }

    private void MarkTaskAsCompleted(TaskItem task)
    {
        using (var context = ContextFactory.CreateDbContext())
        {
            task.IsCompleted = true;
            task.CompletionTime = DateTime.Now; // Set the completion time
            task.IsExpanded = false;
            context.Tasks.Update(task);
            context.SaveChanges();
        }
    }
    private string GetCategoryClass(string category)
    {
        return category switch
        {
            "Daily" => "daily",
            "Weekly" => "weekly",
            "Monthly" => "monthly",
            _ => ""
        };
    }

}




