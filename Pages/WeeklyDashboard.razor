@page "/weeklydashboard"
@using taskManager.Data
@inject NavigationManager Navigation
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.Authorization
@inject IDbContextFactory<ApplicationDbContext> ContextFactory
@inject ILogger<WeeklyDashboard> Logger
@inject AuthenticationStateProvider AuthenticationStateProvider
@attribute [Authorize]
<PageTitle>Weekly Dashboard</PageTitle>

<h1 class="my-4">Weekly Dashboard</h1>

@if (weeklyTasks == null)
{
    <p>Loading...</p>
}
else
{
    <div class="calendar-navigation">
        <button class="btn btn-secondary" @onclick="ShowPreviousWeek">Previous Week</button>
        <button class="btn btn-secondary" @onclick="ShowNextWeek">Next Week</button>
    </div>
    <div class="calendar">
        @foreach (var day in Enumerable.Range(0, 7))
        {
            var currentDate = startDate.AddDays(day);
            <div class="calendar-day">
                <div class="calendar-day-header">
                    @currentDate.ToString("dddd, MMM d")
                    <button class="btn btn-circle modern-circle-button" @onclick="() => NavigateToAddTask(currentDate)">
                        +
                    </button>
                </div>
                <div class="calendar-day-body">
                    @if (weeklyTasks.Any(t => t.DueDate.Date == currentDate.Date))
                    {
                        @foreach (var task in weeklyTasks.Where(t => t.DueDate.Date == currentDate.Date))
                        {
                            <div class="task-item @(task.IsCompleted ? "completed-task" : "") @(task.IsExpanded ? "expanded" : "")" @onclick="() => ToggleTaskExpansion(task)">
                                <div class="task-header">
                                    <strong>@task.Name</strong>
                                    @if (!task.IsCompleted)
                                    {
                                        @if (task.IsExpanded)
                                        {
                                            <button class="btn btn-sm complete-button" @onclick="() => MarkTaskAsCompleted(task)">✔️</button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm edit-button" @onclick="() => ToggleTaskEditing(task)">✏️</button>
                                        }
                                    }
                                </div>
                                <small>@task.Assignee</small><br />
                                <small class="@GetCategoryClass(task.Category)">@task.Category</small>

                                @if (task.IsExpanded)
                                {
                                    <p>@task.Description</p>
                                }
                                @if (task.IsEditing)
                                {
                                    <div>
                                        <input @bind="task.Name" class="form-control" />
                                        <input @bind="task.Assignee" class="form-control" />
                                        <textarea @bind="task.Description" class="form-control"></textarea>
                                        <button class="btn btn-success btn-sm" @onclick="() => SaveTask(task)">Save</button>
                                    </div>
                                }
                            </div>
                        }
                    }
                    else
                    {
                        <div class="task-item">
                            <small>No tasks</small>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
    <button class="btn btn-primary" @onclick="NavigateBack">Return</button>
    <button class="btn btn-primary" @onclick="NavigateToTaskManager">To task manager</button>
}

<style>
