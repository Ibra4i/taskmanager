@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="col-md-6">
        <section class="card shadow-sm p-4 mb-5 bg-white rounded">
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="w-100 btn btn-lg btn-primary">Click here to Logout</button>
                </form>
            }
            else
            {
                <p class="text-center">You have successfully logged out of the application.</p>
            }
        </section>
    </div>
</div>

<style>
    /* Custom styles for the logout page */
    .card {
        border: none;
        border-radius: 10px;
        background-color: #e0f7fa; /* Modern light teal background */
        padding: 40px 20px; /* Add padding around the card, with more padding at the top */
    }

        .card h2, .card h3 {
            font-weight: 700;
        }

        .card .form-floating label {
            color: #6c757d;
        }

        .card .form-floating input {
            border-radius: 5px;
        }

        .card .btn-primary {
            background: linear-gradient(45deg, #007bff, #0056b3);
            border: none;
            transition: all 0.3s ease;
        }

            .card .btn-primary:hover {
                background: linear-gradient(45deg, #0056b3, #003f7f);
                transform: scale(1.05);
            }

        .card .btn-outline-primary {
            border: 2px solid #007bff;
            color: #007bff;
            transition: all 0.3s ease;
        }

            .card .btn-outline-primary:hover {
                background: #007bff;
                color: white;
                transform: scale(1.05);
            }

    .vh-100 {
        height: 100vh;
    }
</style>
